{
  "manifest_version": 2,
  "name": "OCR Extension",
  "version": "1.0",
  "description": "Extract text from selected areas using OCR",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "notifications",
    "tabs",
    "contextMenus"
  ],
  "commands": {
    "activate-ocr": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Activate OCR Selection"
    },
    "open-settings": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open OCR Settings"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "browser_action": {
    "default_title": "OCR Extractor"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "web_accessible_resources": [
    "settings.html",
    "dist/libraries/tesseract/worker.min.js",
    "dist/libraries/tesseract/tesseract.min.js",
    "dist/libraries/tesseract/tesseract-core.wasm.js"
  ]
}